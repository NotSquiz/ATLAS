      "duck_amount_db": -6
    },
    "master": {
      "target_lufs": -14,
      "true_peak_max": -1.0,
      "loudness_range": 6
    }
  },
  "ffmpeg_presets": {
    "tiktok": "-c:v libx264 -preset slow -crf 18 -pix_fmt yuv420p -c:a aac -b:a 192k -ar 44100 -movflags +faststart",
    "instagram": "-c:v libx264 -preset slow -crf 18 -pix_fmt yuv420p -c:a aac -b:a 192k -ar 44100 -movflags +faststart",
    "youtube": "-c:v libx264 -preset slow -crf 17 -pix_fmt yuv420p -c:a aac -b:a 256k -ar 48000 -movflags +faststart",
    "facebook": "-c:v libx264 -preset slow -crf 18 -pix_fmt yuv420p -c:a aac -b:a 192k -ar 44100 -movflags +faststart"
  },
  "block_codes": {
    "EXPORT_RESOLUTION_MISMATCH": "Video resolution doesn't match platform requirements",
